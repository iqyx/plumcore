config PORT_NWDAQ_IF_CANLP
	bool "Dual-port low power CAN-FD interface"

	menu "Configuraton"
		depends on PORT_NWDAQ_IF_CANLP

		config PORT_NAME
			string
			default "nwdaq-if-lpcan"

		config PLATFORM_NAME
			string
			default "cortex-m4f"

		config PORT_FLASH_ADDRESS
			hex
			default "0x08000000"

	endmenu
