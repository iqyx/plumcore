import os
Import("env")

objs = env.Object(source = [
	File(Glob("*.c")),
	File(Glob("interfaces/*.c")),
	File(Glob("interfaces/clock/*.c")),
	File(Glob("interfaces/radio-mac/*.c")),
	File(Glob("types/*.c")),
])

env.Append(CPPPATH = [
	Dir("."),
	Dir("interfaces"),

])

for d in next(os.walk("."))[1]:
	f = os.path.join(d, "SConscript")
	if os.path.isfile(f):
		SConscript(f)


Return("objs")
